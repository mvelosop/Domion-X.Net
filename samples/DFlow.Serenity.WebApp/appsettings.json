{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost;Initial Catalog=DFlow.Serenity.WebApp;Integrated Security=SSPI;MultipleActiveResultSets=true"
  },
  "Data": {
    "Default": {
      "ConnectionString": "Data Source=localhost;Initial Catalog=Serene.Demo;Integrated Security=SSPI;MultipleActiveResultSets=true",
      "ProviderName": "System.Data.SqlClient"
    },
    "Northwind": {
      "ConnectionString": "Data Source=localhost;Initial Catalog=Serene.Northwind;Integrated Security=SSPI;MultipleActiveResultSets=true",
      "ProviderName": "System.Data.SqlClient"
    }
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AppSettings": {
    "LocalTextPackages": {
      "Site": [ "Controls.", "Db.", "Dialogs.", "Enums.", "Forms.", "Permission.", "Site.", "Validation." ]
    },
    "ScriptBundling":  {
      "Enabled": true,
      "Minimize": true,
      "UseMinJS": true
    },
    "UploadSettings": {
      "Path": "~/App_Data/upload/"
    }
  }
}