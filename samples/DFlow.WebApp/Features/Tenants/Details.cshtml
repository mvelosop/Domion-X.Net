@model DFlow.WebApp.Features.Tenants.TenantViewModel

@{
    ViewData["Title"] = Model.Title;

    Func<dynamic, object> links =

        @<div class="links">
            <a asp-action="Index" asp-all-route-data="@Model.LastIndexRouteDictionary"><i class="fa fa-list" aria-hidden="true"></i> √çndice</a>
            <a asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Cliente</a>
            <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-pencil" aria-hidden="true"></i> Modificar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
        </div>;

}

@section PageHeader{
    <h2>@Model.Title</h2>
    @links(Model)
}

