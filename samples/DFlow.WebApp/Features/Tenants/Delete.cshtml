@model DFlow.WebApp.Features.Tenants.TenantViewModel

@{
    ViewData["Title"] = Model.Title;

    Func<dynamic, object> Links =

        @<div class="links">
            <a asp-action="Index" asp-all-route-data="@Model.LastIndexRouteDictionary">Índice</a>
        </div>;

}

<h2>@Model.Title</h2>

@Links(Model)

@Html.Partial("AlertsPartial")

<h3 style="color: darkblue">@Model.Owner</h3>

<div class="row">
    <div class="col-sm-9">
        <h3 style="color:red">¿Realmente quiere eliminar este cliente?</h3>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />

            @Html.Partial("_DisplayPartial", Model)

            <hr />

            @Html.Partial("_DeleteButtonPartial")

        </form>
    </div>

    <div class="col-sm-3">
    </div>

</div>

@Links(Model)